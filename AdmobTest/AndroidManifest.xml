        </activity>
        <activity android:name=".BannerProgActivity" >
        </activity>
        <activity android:name=".BannerXmlActivity" >
        </activity>
        <activity android:name=".BannerAdListenerActivity" >
        </activity>
        <activity android:name=".InterstitialActivity" >
        </activity>
        <!-- TODO: Add this activity -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <!-- TODO: Add this line to register google play services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

